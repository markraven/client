<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenedMailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/opened_mail_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/opened_mail_felado"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/borderbottom"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/opened_mail_targy"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/borderbottom"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/opened_mail_text"
                android:layout_width="match_parent"
                android:layout_height="323dp"
                android:layout_margin="10dp"
                android:background="@drawable/borderbottom"
                android:text="TextView" />

            <Button
                android:id="@+id/opened_reply_btn"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_margin="10dp"
                android:text="Válasz" />

            <Button
                android:id="@+id/opened_mail_delete_btn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:text="Törlés" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>