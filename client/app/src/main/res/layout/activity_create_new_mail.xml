<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewMail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/cimzett_newmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/borderbottom"
            android:hint="Címzett"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/felado_newmail"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/borderbottom"
            android:hint="Feladó" />

        <EditText
            android:id="@+id/targy_newmail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:background="@drawable/borderbottom"
            android:hint="Tárgy"
            android:inputType="textEmailSubject"
            android:importantForAutofill="no" />


        <EditText
            android:id="@+id/mailtex_newmail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:background="@drawable/borderbottom"
            android:hint="Levélírás"
            android:inputType="textLongMessage"
            android:importantForAutofill="no" />
        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Elküldés" />

    </LinearLayout>
</LinearLayout>